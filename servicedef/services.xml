<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>CustomerManagement Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>
    <service name="findDynamicCustomer" engine="groovy" location="component://CustomerManagement/groovyScripts/CustomerServices.groovy"  default-entity-name="FindCustomerView" auth="true">
        <description>Find customers based on search criteria such as email, first name, last name, contact number, and postal address</description>
<!--        <auto-attributes include="pk" mode="OUT" optional="false"/>-->
<!--        <auto-attributes include="nonpk" mode="IN" optional="true"/>-->
        <attribute name="partyId" type="id" mode="IN"/>
        <attribute name="firstName" type="name" mode="IN"/>
        <attribute name="lastName" type="name" mode="IN"/>
        <attribute name="postalCode" type="short-varchar" mode="IN"/>
        <attribute name="customerList" type="List" mode="OUT"/>
    </service>

    <service name="createCustomer"
             engine="groovy"
             location="component://CustomerManagement/groovyScripts/createDynamicCustomer.groovy"
             invoke="createCustomer">
        <description>Create a new customer if not exists</description>
        <attribute name="infoString" type="String" mode="IN" />
        <attribute name="firstName" type="String" mode="IN" />
        <attribute name="lastName" type="String" mode="IN" />
        <attribute name="partyId" type="String" mode="OUT" />
    </service>


    <service name="updateDynamicCustomer" engine="groovy" default-entity-name="FindCustomerView"
             location="component://CustomerManagement/groovyScripts/updateDynamicCustomer.groovy"
             invoke="UpdateCustomerDetail"
             auth="true">
        <attribute name="infoString" type="String" mode="IN" optional="true" />
        <attribute name="firstName" type="String" mode="IN" optional="true" />
        <attribute name="lastName" type="String" mode="IN" optional="true" />
        <attribute name="contactNumber" type="String" mode="IN" optional="true" />
        <attribute name="toName" type="String" mode="IN" optional="true" />
        <attribute name="attnName" type="String" mode="IN" optional="true" />
        <attribute name="address" type="String" mode="IN" optional="true" />
        <attribute name="city" type="String" mode="IN" optional="true" />
        <attribute name="postalCode" type="String" mode="IN" optional="true" />

        <attribute name="customerlist" type="List" mode="OUT" optional="true" />
    </service>



</services>